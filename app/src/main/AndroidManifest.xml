<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="personal.td7.com.pushupstracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/TrackTheme">
        <activity
            android:name=".Tracker"
            android:label="@string/app_name"
            android:theme="@style/TrackTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Stats"
            android:label="Your week's statistics"
            android:theme="@style/TrackTheme.ActionBar">

        </activity>
        <activity android:name=".Stats_Monthly"
            android:label="Your month's statistics"
            android:theme="@style/TrackTheme.ActionBar">

        </activity>
        <service android:name=".NotifierService"
            android:enabled="true"/>
    </application>

</manifest>